<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBotom_toBottomOf="match_parent"
    app:layout_constraintLeft_toLeftOf="match_parent"
    app:layout_constraintRight_toRightOf="match_parent"
    app:layout_constraintTop_toTopOf="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:weightSum="3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/line01"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="10"
            android:layout_weight="1"/>
        <Button
            android:layout_height="125dp"
            android:layout_width="100dp"
            android:text="11"
            android:layout_weight="1" />
        <Button
            android:layout_height="125dp"
            android:layout_width="100dp"
            android:text="12"
            android:layout_weight="1"/>
        ></LinearLayout>

    <LinearLayout
        android:id="@+id/line02"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="8"
            android:layout_weight="1" />
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="9"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line03"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="4"
            android:layout_weight="1" />
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="5"
            android:layout_weight="1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="6"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line04"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="1"
            android:layout_weight="1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="2"
            android:layout_weight="1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:text="3"
            android:layout_weight="1"/>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>